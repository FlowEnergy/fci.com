.container.visible-sm.visible-xs
  .row
    .col-xs-12
      #customers-mobile-carousel.home-mobile-carousel.customers-mobile-carousel.carousel.slide(data-ride='carousel')
        // Indicators
        ol.carousel-indicators
          li.active(data-target='#customers-mobile-carousel', data-slide-to='0')
          li(data-target='#customers-mobile-carousel-2', data-slide-to='1')
          li(data-target='#customers-mobile-carousel-3', data-slide-to='2')
          li(data-target='#customers-mobile-carousel-4', data-slide-to='3')
        // Wrapper for slides
        .carousel-inner(role='listbox')
          .item.active
            .home-mobile-carousel__item
              .home-mobile-carousel__wrap-img
                img.icon-tab.svg(src="../img/nextgeneration.svg")
              h4.home-mobile-carousel__title Next Generation HVAC Technology

            .customers-scroll-wrap
              .customers-scroll
                .customers-scroll--inner
                  .row.visible-xs.visible-sm
                    include ../../jade/includes/customers/customers-mobile-airoports

          .item
            .home-mobile-carousel__item
              .home-mobile-carousel__wrap-img
                img.icon-tab.svg(src="../img/unparalleledenergy.svg")
              h4.home-mobile-carousel__title Unparalleled Energy Savings

            .customers-scroll-wrap
              .customers-scroll
                .customers-scroll--inner
                  .row.visible-xs.visible-sm
                    include ../../jade/includes/customers/customers-mobile-universities

          .item
            .home-mobile-carousel__item
              .home-mobile-carousel__wrap-img
                img.icon-tab.svg(src="../img/industrialquality.svg")
              h4.home-mobile-carousel__title Industrial Quality Hardware

            .customers-scroll-wrap
              .customers-scroll
                .customers-scroll--inner
                  .row.visible-xs.visible-sm
                    include ../../jade/includes/customers/customers-mobile-hospitals

          .item
            .home-mobile-carousel__item
              .home-mobile-carousel__wrap-img
                img.icon-tab.svg(src="../img/guaranteed.svg")
              h4.home-mobile-carousel__title Guaranteed Performance

            .customers-scroll-wrap
              .customers-scroll
                .customers-scroll--inner
                  .row.visible-xs.visible-sm
                    include ../../jade/includes/customers/customers-mobile-commercial

        // Controls
        a.left.carousel-control(href='#customers-mobile-carousel', role='button', data-slide='prev')
          img.carousel-control-icon.svg(src="../img/home/arrow-slider.svg" alt="")
        a.right.carousel-control(href='#customers-mobile-carousel', role='button', data-slide='next')
          img.carousel-control-icon.svg(src="../img/home/arrow-slider.svg" alt="")
