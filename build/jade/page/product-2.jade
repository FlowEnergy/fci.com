  .product-2--solid-bg
    .container.product-2__container
      .row.product-2__block.animate-40
        h1.product-2__block-title
          | DeltaP SmartValve
          |  Sensors
        hr.product-2__block-delimiter
      .row
        .col-md-4
          .container(style="width: 100%;")
            .row.product-2__sensor-card.animate-40
              .col-xs-12.col-sm-6.col-md-12
                p.product-2__sensor-card-title Rotation Sensor
                ul.product-2__sensor-card-list.product-2__sensor-card-list--dots
                  li ± 0.1° rotation accuracy
                  li Unique flow data from factory test
