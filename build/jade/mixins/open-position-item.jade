mixin openPositionItem(icon, title, country, description, url)
  - var icon = icon || false
  - var title = title || 'Title'
  - var country = country || 'country'
  - var description = description || 'description'
  - var defaultUrl = url || '#'

  .open-position-item
    .open-position-item__icon-wrap.animate-40
      img.open-position-item__icon.svg(src="../img/about/icons/" + icon + '.svg')
    .open-position-item__title.animated-down-0-7s=title
    .open-position-item__country.animated-down-0-7s=country
    .open-position-item__description.animated-down-0-9s=description