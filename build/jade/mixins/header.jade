mixin headerNav(home, customers)
  .wrap-loader.table
    .table-row
      .table-cell.vertical-middle
        .spinner
          .rect1
          .rect2
          .rect3
          .rect4
          .rect5
  .main-header
    .container
      nav.navbar.navbar-default
        .container-fluid
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false') menu
            a.navbar-brand.hidden-xs(href='index.html')
              img.logo-header(src="../img/logo.png", alt="Flow Control")
            a.navbar-brand.visible-xs(href='index.html')
              img.logo-header(src="../img/logo-mobile.png", alt="Flow Control")
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-right
              li
                .dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                  | Products 
                ul.dropdown-menu
                  li
                    a(href='product-2.html') DeltaP SmartValve
                  li
                    a(href='product-1.html') DeltaPValve

              li: a.mob-list(href='product-delta.html') DeltaP SmartValve
              li: a.mob-list(href='product.html') DeltaPValve
              li: a(href='customers.html') Customers
              li: a(href='resources.html') Resources
              li: a(href='about.html') About
              li: a(href='/fciblog') Blog
              li: a(href='contact.html') Contact
              li: a(href='https://www.flowcontrol.com/Users/login') Log In
              li
                form.searchform(action='https://www.google.com/search', method='get', name='searchform', target='_blank', style='padding-left: 15px;')
                  input(name='sitesearch', type='hidden', value='flowcontrol.com')
                  input.form-control.search(autocomplete='on', name='q', placeholder='Search in flowcontrol.com', required='required', type='text', style='width: 100px; float: left; vertical-align: middle; height: 20px; margin-top: 15px; font-size: 8pt;')
                  button.button(type='submit', style='height: 25px; font-size: 8pt; vertical-align: middle; padding-top: -5px;margin-top: -5px; margin-top: 12px; margin-left: 4px;') Search