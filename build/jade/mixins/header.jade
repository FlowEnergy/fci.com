mixin headerNav(home, customers)
  .unknow
    .table-row
      .table-cell.vertical-middle
        .spinner
          .rect1
          .rect2
          .rect3
          .rect4
          .rect5
  .main-header
    .container
      nav.navbar.navbar-default
        .container-fluid
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false') menu
            a.navbar-brand.hidden-xs(href='index.html')
              img.logo-header(src="../img/logo.png", alt="Flow Control")
            a.navbar-brand.visible-xs(href='index.html')
              img.logo-header(src="../img/logo-mobile.png", alt="Flow Control")
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-right
              //- li: a(href='product.html') 
              li
                .dropdown
                  a(href="#", data-toggle="dropdown").dropdown-toggle Products
                  ul.dropdown-menu(role='menu', aria-labelledby='dropdownMenu')
                      li
                          a(href='product-delta.html', tabindex='-1') DeltaP SmartValve
                      li 
                          a(href='product.html', tabindex='-1') DeltaPValve
                  script.
                    $('.dropdown-toggle').dropdown()
              li: a.mob-list(href='product-delta.html') DeltaP SmartValve
              li: a.mob-list(href='product.html') DeltaPValve
              li: a(href='customers.html') Customers
              li: a(href='resources.html') Resources
              li: a(href='about.html') About
              li: a(href='blogs.html') Blog
              li: a(href='contact.html') Contact
              li: a(href='http://www.flowcontrol.com/Users/login') Log In