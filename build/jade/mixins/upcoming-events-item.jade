mixin upcomingEventsItem(img, title, date, url)
  - var defaultImg = img || '1'
  - var defaultTitle = title || 'defaultTitle'
  - var defaultDate = date || '2016'
  - var defaultUrl = url || '#'

  a.upcoming-events__item(href=defaultUrl)
    .upcoming-events__img-wrap.table
      .table-row
        .table-cell.vertical-middle
          img.upcoming-events__img(src="../img/resources/"+ defaultImg + ".png" alt="defaultImg")
    .upcoming-events__title=defaultTitle
    .upcoming-events__date=defaultDate