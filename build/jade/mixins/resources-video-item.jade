mixin resourcesVideoItem(url, title)
  - var defaultTitle = title || 'default title'
  - var defaultUrl = url || 'www.youtube.com'
  .resources-video-carousel__item
    .resources-video-carousel__img-wrap
      .resources-video-carousel
      iframe.resources-video-carousel(type='text/html' width='450' height='315' src=defaultUrl frameborder='0' allowfullscreen)
    h4.resources-video-carousel__title=defaultTitle