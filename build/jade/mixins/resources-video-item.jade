mixin resourcesVideoItem(img, title)

  - var defaultImg = img || 'lowest-icon'
  - var defaultTitle = title || 'default title'

  a.resources-video-carousel__item(href="#")
    .resources-video-carousel__img-wrap
      .resources-video-carousel__img-grad
      img.resources-video-carousel__img(src="../img/resources/" + defaultImg + ".png" alt=defaultImg)
    h4.resources-video-carousel__title=defaultTitle